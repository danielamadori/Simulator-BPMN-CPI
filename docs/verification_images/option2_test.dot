digraph G {
    rankdir=LR;
    splines=line;
    nodesep=0.3;
    ranksep=0.5;
    compound=true;
    node [fontname="Arial"];
    edge [fontname="Arial"];

    // Option 2 improved: Show circle border with split ownership indication
    
    // Start place
    start [shape=circle label="▷" fontsize=20 style="filled" fillcolor="white" color="black" penwidth=1.5 width=0.5];

    // OUTER REGION: Sequence
    subgraph cluster_Sequence {
        label="R";
        style="rounded";
        color="black";
        bgcolor="#fafafa";
        penwidth=2;
        
        // Inner Region R1
        subgraph cluster_R1 {
            label="R1";
            style="rounded";
            color="orange";
            bgcolor="white";
            penwidth=2;
            
            t1 [shape=box label="R1" style="rounded,filled" fillcolor="white" color="orange" penwidth=2];
        }
        
        // SHARED PLACE with visible circle border
        // Using double circle (peripheries=2) or penwidth thick border
        shared_place [shape=circle label="▷" fontsize=18 
                      style="filled" fillcolor="white" 
                      color="black" penwidth=2 
                      width=0.5];
        
        // Inner Region R2
        subgraph cluster_R2 {
            label="R2";
            style="rounded";
            color="green";
            bgcolor="white";
            penwidth=2;
            
            t2 [shape=box label="R2" style="rounded,filled" fillcolor="white" color="green" penwidth=2];
        }
        
        // Edges within outer cluster
        t1 -> shared_place [color="orange" penwidth=2];
        shared_place -> t2 [color="green" penwidth=2];
    }

    // End place
    end [shape=circle label="▷" fontsize=20 style="filled" fillcolor="white" color="black" penwidth=1.5 width=0.5];
    
    // Entry/exit edges
    start -> t1 [color="black"];
    t2 -> end [color="black"];
}
