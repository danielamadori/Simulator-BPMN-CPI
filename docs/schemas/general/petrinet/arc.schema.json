{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "arc.schema.json",
  "title": "Arc",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "source": { "type": "string" },
    "target": { "type": "string" },
    "weight": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    }
  },
  "required": ["id", "source", "target"],
  "additionalProperties": false
}